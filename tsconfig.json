{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types","./node_modules"], 
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext","ES2021"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types":["node","express"],
    "skipLibCheck": true, 
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/styles/*": ["./src/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/types", "server.js"],
  "exclude": ["node_modules"],
}
